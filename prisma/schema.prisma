generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id          String   @id
  isPassenger Boolean
  isDriver    Boolean
  name        String
  cpf         String
  email       String   @unique
  password    String   @db.Text
  carPlate    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Ride {
  id          String   @id
  passengerId String
  driverId    String?
  date        DateTime
  fare        Float?
  status      String
  fromLat     Float
  fromLng     Float
  toLat       Float
  toLng       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
